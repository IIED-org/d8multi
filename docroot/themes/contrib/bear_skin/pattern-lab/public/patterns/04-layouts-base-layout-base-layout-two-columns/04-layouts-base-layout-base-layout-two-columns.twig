&lt;div {{ attributes.addClass(classes) }}&gt;
  
  {% if content.top_row %}
    {% block row_top %}
      &lt;div class=&quot;single-row single-row--top&quot;&gt;
        &lt;div class=&quot;inner&quot;&gt;
          {{ content.top_row }}
        &lt;/div&gt;
      &lt;/div&gt;
    {% endblock %}
  {% endif %}

  &lt;div class=&quot;row row--center&quot;&gt;

    {% block content %}

      {% if content.main %}
        {% block main_content %}
          &lt;main class=&quot;main-content col-xs-12
            {% if (content.left or content.right) and not (content.left and content.right)  %}
              col-md-9
            {% elseif content.left and content.right %}
              col-md-6
            {% endif %}&quot;&gt;
            &lt;div class=&quot;inner&quot;&gt;
              {{ content.main }}
            &lt;/div&gt;
          &lt;/main&gt;
        {% endblock %}
      {% endif %}

      {% if content.left %}
        {% block left_sidebar %}
          &lt;aside class=&quot;sidebar sidebar--left col-xs-12  first-md
            {% if not content.main %}
              col-md-6
            {% else %}
              col-md-3
            {% endif %}&quot;&gt;
            &lt;div class=&quot;inner&quot;&gt;
              {{ content.left }}
            &lt;/div&gt;
          &lt;/aside&gt;
        {% endblock %}
      {% endif %}

      {% if content.right %}
        {% block right_sidebar %}
          &lt;aside class=&quot;sidebar sidebar--right col-xs-12 col-md-3
            {% if not content.main %}
              col-md-6
            {% else %}
              col-md-3
            {% endif %}&quot;&gt;
            &lt;div class=&quot;inner&quot;&gt;
              {{ content.right }}
            &lt;/div&gt;
          &lt;/aside&gt;
        {% endblock %}
      {% endif %}

    {% endblock %}

  &lt;/div&gt;

  {% if content.bottom_row %}
    {% block row_bottom %}
      &lt;div class=&quot;single-row single-row--top&quot;&gt;
        &lt;div class=&quot;inner&quot;&gt;
          {{ content.bottom_row }}
        &lt;/div&gt;
      &lt;/div&gt;
    {% endblock %}
  {% endif %}

&lt;/div&gt;
