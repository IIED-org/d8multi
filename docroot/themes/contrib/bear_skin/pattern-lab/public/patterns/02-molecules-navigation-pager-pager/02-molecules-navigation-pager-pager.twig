{% if items %}
  &lt;nav class=&quot;pager&quot; role=&quot;navigation&quot; aria-labelledby=&quot;pagination-heading&quot;&gt;
    &lt;h4 id=&quot;pagination-heading&quot; class=&quot;visually-hidden&quot;&gt;{{ 'Pagination'|t }}&lt;/h4&gt;
    &lt;ul class=&quot;pager__items js-pager__items sans&quot;&gt;
      {# Print first item if we are not on the first page. #}
      {% if items.first %}
        &lt;li class=&quot;pager__item pager__item--first&quot;&gt;
          &lt;a class=&quot;pager__link&quot; href=&quot;{{ items.first.href }}&quot; title=&quot;{{ 'Go to first page'|t }}&quot;{{ items.first.attributes|without('href', 'title') }}&gt;
            &lt;i class=&quot;icon-backward&quot;&gt;&lt;span class=&quot;visually-hidden&quot;&gt;{{ 'First page'|t }}&lt;/span&gt;&lt;/i&gt;
          &lt;/a&gt;
        &lt;/li&gt;
      {% endif %}
      {# Print previous item if we are not on the first page. #}
      {% if items.previous %}
        &lt;li class=&quot;pager__item pager__item--previous&quot;&gt;
          &lt;a class=&quot;pager__link&quot; href=&quot;{{ items.previous.href }}&quot; title=&quot;{{ 'Go to previous page'|t }}&quot; rel=&quot;prev&quot;{{ items.previous.attributes|without('href', 'title', 'rel') }}&gt;
            &lt;i class=&quot;icon-chevron-left&quot;&gt;&lt;span class=&quot;visually-hidden&quot;&gt;{{ 'Previous page'|t }}&lt;/span&gt;&lt;/i&gt;
          &lt;/a&gt;
        &lt;/li&gt;
      {% endif %}
      {# Add an ellipsis if there are further previous pages. #}
      {% if ellipses.previous %}
        &lt;li class=&quot;pager__item pager__item--ellipsis&quot; role=&quot;presentation&quot;&gt;&lt;/li&gt;
      {% endif %}
      {# Now generate the actual pager piece. #}
      {% for key, item in items.pages %}
        &lt;li class=&quot;pager__item{{ current == key ? ' is-active' : '' }}&quot;&gt;
          {% if current == key %}
            {% set title = 'Current page'|t %}
          {% else %}
            {% set title = 'Go to page @key'|t({'@key': key}) %}
          {% endif %}
          &lt;a class=&quot;pager__link&quot; href=&quot;{{ item.href }}&quot; title=&quot;{{ title }}&quot;{{ item.attributes|without('href', 'title') }}&gt;
            &lt;span class=&quot;visually-hidden&quot;&gt;
              {{ current == key ? 'Current page'|t : 'Page'|t }}
            &lt;/span&gt;
            {{- key -}}
          &lt;/a&gt;
        &lt;/li&gt;
      {% endfor %}
      {# Add an ellipsis if there are further next pages. #}
      {% if ellipses.next %}
        &lt;li class=&quot;pager__item pager__item--ellipsis&quot; role=&quot;presentation&quot;&gt;&lt;/li&gt;
      {% endif %}
      {# Print next item if we are not on the last page. #}
      {% if items.next %}
        &lt;li class=&quot;pager__item pager__item--next&quot;&gt;
          &lt;a class=&quot;pager__link&quot; href=&quot;{{ items.next.href }}&quot; title=&quot;{{ 'Go to next page'|t }}&quot; rel=&quot;next&quot;{{ items.next.attributes|without('href', 'title', 'rel') }}&gt;
            &lt;i class=&quot;icon-chevron-right&quot;&gt;&lt;span class=&quot;visually-hidden&quot;&gt;{{ 'Next page'|t }}&lt;/span&gt;&lt;/i&gt;
          &lt;/a&gt;
        &lt;/li&gt;
      {% endif %}
      {# Print last item if we are not on the last page. #}
      {% if items.last %}
        &lt;li class=&quot;pager__item pager__item--last&quot;&gt;
          &lt;a class=&quot;pager__link&quot; href=&quot;{{ items.last.href }}&quot; title=&quot;{{ 'Go to last page'|t }}&quot;{{ items.last.attributes|without('href', 'title') }}&gt;
            &lt;i class=&quot;icon-forward&quot;&gt;&lt;span class=&quot;visually-hidden&quot;&gt;{{ 'Last page'|t }}&lt;/span&gt;&lt;/i&gt;
          &lt;/a&gt;
        &lt;/li&gt;
      {% endif %}
    &lt;/ul&gt;
  &lt;/nav&gt;
{% endif %}
